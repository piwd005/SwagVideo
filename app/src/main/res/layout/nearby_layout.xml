<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <com.whygraphics.gifview.gif.GIFView xmlns:gif_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gifv"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/textId"
            android:gravity="bottom"
            android:paddingHorizontal="2dp"
            android:paddingBottom="55dp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:text="Here are some member?"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUser"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:placeholderImage="@drawable/photo_placeholder"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/colorBadgeProfile"
                app:roundingBorderWidth="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">
                <!--<de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    app:roundAsCircle="true"
                    app:placeholderImage="@drawable/photo_placeholder"
                    app:roundingBorderColor="@color/colorBadgeProfile"
                    app:roundingBorderWidth="2dp" />-->
<!--                android:drawableLeft="@drawable/ic_like"-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/transparent_bg_round_corner"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:drawableLeft="@drawable/ic_like"
                        android:maxLength="3"
                        android:textColor="@color/emoji_white"
                        android:text=""/>
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/emoji_white"
                        android:text=" "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/transparent_bg_round_corner"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:maxLength="3"
                        android:textColor="@color/emoji_white"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/emoji_white"
                        android:text=" "/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>